<header>
    <nav>
        <a class="topnavitem" href="/">
            <p class="topnavtext"><%=t('header.home')%></p>
        </a>
        <a class="topnavitem" href="/play">
            <p class="topnavtext"><%=t('header.play')%></p>
        </a>
        <a class="topnavitem" href="/news">
            <p class="topnavtext"><%=t('header.news')%></p>
        </a>
        <a class="topnavitem" href="/login" id="loginlink">
            <p class="topnavtext" id="logintext"><%=t('header.login')%></p>
        </a>
        <a class="topnavitem" href="/createaccount" id="createaccountlink">
            <p class="topnavtext" id="createaccounttext"><%=t('header.createaccount')%></p>
        </a>
        <label class="topnavitem" for="language-picker"><%=t('footer.language')%>:
            <select class="topnavtext" id="language-picker">
                <% for(let i=0; i<languages.length; i++) {%>
                    <% if (languages[i].code === language) { %>
                        <option value="<%= languages[i].code %>" selected><%= languages[i].name %></option>
                    <% } else { %>
                        <option value="<%= languages[i].code %>"><%= languages[i].name %></option>
                    <% } %>
                <% } %>
            </select>
        </label>
    </nav>
</header>
<script src="/scripts/languagepicker.js"></script>